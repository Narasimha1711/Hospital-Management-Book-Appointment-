                </ul>
            </div>
            
        </nav>
    </header>

    <div class="empty"></div>

    <div id="side">
        <div class="appoint">
            <!-- <li class="user user_prof"><i class="fa-solid fa-user prof"></i></li> -->
            <li class="user user_prof"><i class="fas fa-user-md prof"></i></li>
            <span id="username">
                <% if(locals.doctorName) { %>
                    <%= doctorName %>
                    <% } %>
            </span>
        </div>

        <div class="appointments_list">
            <a href="/nextAppointments" class="appointments_list">Upcoming Appointments</a>
        </div>

        <div class="appointments_list logout">
            <a href="/doctor_logout" class="appointments_list">Log Out</a>
        </div>
            </div>

            <div class="head">
                <span id="head"> Upcoming Appointments</span>
            </div>

            

            <div class="show_list">

                <div class="sno">
                    <span class="row_heading">S No</span>
                    <hr>

                    <% if(locals.appoint) { %>
                    <% for(let i = 0; i < appoint.length; i++) { %>
                        
                            
                        <li class="list_t"><%= i+1 %></li>
                           <% } %>
                        <% } %>

                </div>

                <div class="appoint_id">
                    <span class="row_heading">Appointment Id</span>
                    <hr>
                    <div class="cont">

                        <% if(locals.appoint) { %>
                        <% for(let i = 0; i < appoint.length; i++) { %>
                        
                            
                         <li class="list_t"><%= appoint[i].Appointment_ID %></li>
                            <% } %>
                            <% } %>
                            
                            <!-- <%# Appointment_id %> -->
                        </div>
                    
                </div>
                <div class="appoint_patient_name">
                    <span class="row_heading">Patient name</span>
                    <hr>
                    <div class="cont">

                        <% if(locals.appoint) { %>

                        <% for(let i = 0; i < appoint.length; i++) { %>
                            
                            <li class="list_t"><%= appoint[i].Patient_Name %></li>
                            <% } %>
                            <% } %>
                            <%# Patient_name %>
                        </div>
                </div>

                <div class="appoint_date">
                    <span class="row_heading">Appointment Date</span>
                    <hr>

                    <div class="cont">

                        <% if(locals.appoint) { %>
                        <% for(let i = 0; i < appoint.length; i++) { %>
                            
                            <li class="list_t"><%= appoint[i].Appointment_Date %></li>
                            <% } %>
                            <% } %>
                            <%# Appointment_date %>
                        </div>
                </div>

                <div class="appoint_timings">
                    <span class="row_heading">Appointment Timings</span>
                    <hr>
                    <div class="cont">

                        <% if(locals.appoint) { %>
                        <% for(let i = 0; i < appoint.length; i++) { %>
                            
                            <li class="list_t"><%= appoint[i].StartTime %> - <%= appoint[i].EndTime %></li>
                            <% } %>
                            <% } %>
                            
                            <!-- <%#start_time  %> - <%# end_time  %> -->
                        </div>
                </div>
            </div>


    <footer>
        <div class="foot">

            <div class="overall">

                
                <div class="quick_links">
                    <h3>Quick Links</h3>

                    <div class="links2">
